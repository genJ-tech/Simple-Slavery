<?xml version="1.0" encoding="UTF-8"?>
<Defs>
	<ThoughtDef>
		<defName>SlaveColonyThought</defName>
		<workerClass>SimpleSlavery.ThoughtWorker_SlaveColony</workerClass>
		<stages>
			<li>
				<label>slave labor</label>
				<description>Our colony is holding people as slaves. This is wrong.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef ParentName="DeathMemory">
		<defName>KnowSlaveDied</defName>
		<durationDays>3</durationDays>
		<stackLimit>3</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>slave died</label>
				<description>One of the slaves died.</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>
